<Page x:Class="Raminagrobis.WPF.pages.OffresPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Raminagrobis.WPF.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OffresPage">

    <Grid x:Name="OffresMain" Background="White">
        <Menu Margin="0,0,0,425" VerticalAlignment="Top">
            <Button x:Name="btn_get_all" Content="Voir tout" HorizontalAlignment="Left" VerticalAlignment="Top" Click="Btn_get_all_Click" Height="20" Width="75"/>
            <Button x:Name="btn_insert" Content="Insérer" HorizontalAlignment="Left" VerticalAlignment="Top" Click="Btn_insert_Click" Height="20" Width="75"/>
        </Menu>
        <DataGrid x:Name="liste_offre" Margin="0,25,0,0" SelectionChanged="liste_offre_SelectionChanged"/>
        <Grid x:Name="insert_offre" Margin="0,25,0,0">
            <Button x:Name="Btn_import" Content="Importer les offres" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Btn_import_Click"/>
        </Grid>
    </Grid>
</Page>
